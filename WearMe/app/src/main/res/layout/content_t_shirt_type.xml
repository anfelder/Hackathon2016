<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#8585ad"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.newera.wearme.tShirtType"
    tools:showIn="@layout/activity_t_shirt_type"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:text="CHOOSE YOUR TSHIRT TYPE"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="plainSelect">

        <ImageView
            android:layout_width="104dp"
            android:layout_height="137dp"
            android:src="@drawable/plainwhiteshirt"/>

        <TextView
            android:layout_width="203dp"
            android:layout_height="97dp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Plain White Tees" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="tankSelect">

        <ImageView
            android:layout_width="104dp"
            android:layout_height="137dp"
            android:src="@drawable/tanktop"/>

        <TextView
            android:layout_width="203dp"
            android:layout_height="97dp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Tank Top" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="cubanSelect">

        <ImageView
            android:layout_width="104dp"
            android:layout_height="137dp"
            android:src="@drawable/plainwhitecubanstyle"/>

        <TextView
            android:layout_width="203dp"
            android:layout_height="97dp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Cuban Style" />

    </LinearLayout>

</LinearLayout>
